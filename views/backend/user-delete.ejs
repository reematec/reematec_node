<section class="container dashboard-page">
    <div class="card">                

        <div class="card-header">
            <p>Delete User - Confirmation</p>
        </div>

        <div class="card-body">
            <p>Are you sure you want to delete <strong>"<%= user.firstname %> <%= user.lastname %>"</strong>?</p>
            <p>This action is permanent.</p>
            
            <form method="POST">
                <input type="hidden" name="_csrfToken" value="<%= csrfToken %>">
                <input type="hidden" name="identifier" value="<%= user.identifier %>">
                <div>
                    <a class="btn btn-normal btn-gray" href="/home/users">Cancel</a>
                    <input class="btn btn-normal btn-red" type="submit" name="btnDelete" value="Delete">
                </div>
            </form>


        </div>
    </div>
    
</section>