<section class="container dashboard-page">
    <div class="card">                

        <div class="card-header">
            <p>Delete Product - Confirmation</p>
        </div>

        <div class="card-body">
            <p>Are you sure you want to delete <strong>"<%= product.name %>"</strong>?</p>
            <p>This action is permanent.</p>
            
            <form action="/home/delete-product/<%= product.slug %>" method="POST">   
                <input type="hidden" name="_csrfToken" value="<%= csrfToken %>">             
                <input type="hidden" name="slug" value="<%= product.slug %>">
                <div>
                    <a class="btn btn-normal btn-gray" href="/home/product">Cancel</a>
                    <input class="btn btn-normal btn-red" type="submit" name="btnDelete" value="Delete">
                </div>
            </form>
        </div>
    </div>    
</section>