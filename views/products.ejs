<article class="showcase container">
    <aside  class="sidebar">
        <ul class="sidebar__list">
            
            <% categories.forEach(c => { %>
                <% if (c.showSubMenu) { %>
                
                    <li id="<%= c.slug %>">
                        <label class="sidebar__list__header" for="<%= c.name %>">
                            <p><%= c.name %></p>
                            <span><i class="fas fa-caret-down"></i></span>
                        </label>
                        <input type="checkbox" id="<%= c.name %>">
                        <ul  class="sidebar__list__items__sub">
                            <% c.subCategories.forEach(s => { %>
                                <li><a class="btn" href="/subcategory/<%= s.slug %>"><%= s.name %></a></li>
                            <% }) %>
                            
                        </ul>
                    </li>                
                <% } else { %>                 
                    <li class="sidebar__list__items"><a class="btn"  href="/category/<%= c.slug %>"><%= c.name %></a></li>
                <% } %>
            <% }) %>
            
        </ul>
    </aside>
    
    <section class="products">
        <div class="products__description">

            <h1>Soccer & Footballs</h1>
            <p>Reematec not only hand and machine Swen football but also produce Hybrid and Thermo Bonded footballs using technology. We not only provide the products according to customer demand but also provide excellent services to customers. We manufacture Such footballs in our factory, Whose design does not only impress the customers, but they can also use for a long time.</p>

        </div>

        <div class="products__toolbar">
            <p>Total: <span>75</span> Models</p>
            <div class="sort-by">
                <label for="">SORT BY: </label>
                <select name="" id="">
                    <option value="Position">Position</option>
                    <option value="Position">Newest</option>
                    <option value="Position">Oldest</option>
                    <option value="Position">Usage</option>
                </select>
            </div>
        </div>
        
        
        <div class="product-page-collection__flex">
            
            <% for (let p = 0; p < products.length; p++) {%>
            <div class="product-page-collection__flex__card">
                <a class="btn card__wrapper" href="/product/<%= products[p].slug %>">
                    <img src="/images/assets/300/<%= products[p].images[0].src %>" alt="">
                    <div class="card__caption">
                        
                        <div class="card__caption__basic">
                            <p class="card__caption__basic__name"><%= products[p].name %></p>
                            <div class="card__caption__basic__info">
                                <p><%= products[p].categoryId ? products[p].category.name : '' %></p>
                                <p><%= products[p].usage %></p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>

